import React, { useState, useEffect } from 'react';
import farmerApi from '../../../services/farmerApi';

const FinancialTab = ({ dashboardData, onDataUpdate }) => {
  const [transactions, setTransactions] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [showPayoutModal, setShowPayoutModal] = useState(false);
  const [payoutAmount, setPayoutAmount] = useState('');
  const [actionLoading, setActionLoading] = useState('');
  const [timeFilter, setTimeFilter] = useState('month');
  const [chartData, setChartData] = useState([]);

  // Load financial data
  useEffect(() => {
    loadFinancialData();
  }, [timeFilter]);

  const loadFinancialData = async () => {
    try {
      setLoading(true);
      const [transactionsRes] = await Promise.all([
        farmerApi.getTransactions()
      ]);
      
      setTransactions(transactionsRes.data || []);
      generateChartData(transactionsRes.data || []);
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  // Generate mock chart data
  const generateChartData = (transactionsData) => {
    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    const data = months.map(month => ({
      month,
      earnings: Math.floor(Math.random() * 50000) + 10000,
      expenses: Math.floor(Math.random() * 10000) + 1000
    }));
    setChartData(data);
  };

  // Handle payout request
  const handlePayoutRequest = async (e) => {
    e.preventDefault();
    if (!payoutAmount || parseFloat(payoutAmount) <= 0) {
      alert('Please enter a valid payout amount');
      return;
    }

    setActionLoading('payout');
    try {
      await farmerApi.requestPayout(parseFloat(payoutAmount));
      alert(`Payout request of ‚Çπ${payoutAmount} submitted successfully!`);
      setShowPayoutModal(false);
      setPayoutAmount('');
      loadFinancialData();
      onDataUpdate();
    } catch (err) {
      alert(err.message);
    } finally {
      setActionLoading('');
    }
  };

  // Calculate financial metrics
  const totalEarnings = transactions
    .filter(t => t.type === 'credit')
    .reduce((sum, t) => sum + t.amount, 0);

  const totalExpenses = transactions
    .filter(t => t.type === 'debit')
    .reduce((sum, t) => sum + t.amount, 0);

  const netProfit = totalEarnings - totalExpenses;
  const availableBalance = dashboardData?.stats?.totalEarnings || 0;

  // Format currency
  const formatCurrency = (amount) => {
    return `‚Çπ${amount?.toLocaleString('en-IN')}`;
  };

  // Get transaction type color
  const getTransactionTypeColor = (type) => {
    return type === 'credit' ? 'text-green-600' : 'text-red-600';
  };

  // Get transaction icon
  const getTransactionIcon = (type) => {
    return type === 'credit' ? 'üí∞' : 'üí∏';
  };

  if (loading) {
    return (
      <div className="flex justify-center items-center h-64">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-green-600 mx-auto mb-4"></div>
          <p className="text-gray-600">Loading financial data...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      {/* Header */}
      <div className="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
          <h1 className="text-2xl font-bold text-gray-900">Financial Dashboard</h1>
          <p className="text-gray-600">Track your earnings, expenses, and manage payouts</p>
        </div>
        
        <div className="flex flex-wrap gap-2">
          <button
            onClick={() => setShowPayoutModal(true)}
            disabled={availableBalance <= 0}
            className="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 disabled:opacity-50 transition-colors flex items-center space-x-2"
          >
            <span>üí∞</span>
            <span>Request Payout</span>
          </button>
          
          <button
            onClick={loadFinancialData}
            className="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors flex items-center space-x-2"
          >
            <span>üîÑ</span>
            <span>Refresh</span>
          </button>
        </div>
      </div>

      {/* Financial Overview Cards */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {/* Available Balance */}
        <div className="bg-white rounded-lg shadow-sm p-6 border-l-4 border-green-500">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-sm font-medium text-gray-500">Available Balance</p>
              <p className="text-2xl font-semibold text-gray-900 mt-1">
                {formatCurrency(availableBalance)}
              </p>
              <p className="text-xs text-gray-400 mt-1">Ready for withdrawal</p>
            </div>
            <div className="text-3xl">üí∞</div>
          </div>
        </div>

        {/* Total Earnings */}
        <div className="bg-white rounded-lg shadow-sm p-6 border-l-4 border-blue-500">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-sm font-medium text-gray-500">Total Earnings</p>
              <p className="text-2xl font-semibold text-gray-900 mt-1">
                {formatCurrency(totalEarnings)}
              </p>
              <p className="text-xs text-gray-400 mt-1">Lifetime income</p>
            </div>
            <div className="text-3xl">üìà</div>
          </div>
        </div>

        {/* Total Expenses */}
        <div className="bg-white rounded-lg shadow-sm p-6 border-l-4 border-orange-500">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-sm font-medium text-gray-500">Total Expenses</p>
              <p className="text-2xl font-semibold text-gray-900 mt-1">
                {formatCurrency(totalExpenses)}
              </p>
              <p className="text-xs text-gray-400 mt-1">Operational costs</p>
            </div>
            <div className="text-3xl">üí∏</div>
          </div>
        </div>

        {/* Net Profit */}
        <div className="bg-white rounded-lg shadow-sm p-6 border-l-4 border-purple-500">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-sm font-medium text-gray-500">Net Profit</p>
              <p className="text-2xl font-semibold text-gray-900 mt-1">
                {formatCurrency(netProfit)}
              </p>
              <p className="text-xs text-gray-400 mt-1">After expenses</p>
            </div>
            <div className="text-3xl">‚úÖ</div>
          </div>
        </div>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {/* Earnings Chart */}
        <div className="bg-white rounded-lg shadow-sm p-6 border">
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-lg font-semibold text-gray-900">Earnings Overview</h2>
            <select
              value={timeFilter}
              onChange={(e) => setTimeFilter(e.target.value)}
              className="px-3 py-1 border rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-transparent"
            >
              <option value="week">This Week</option>
              <option value="month">This Month</option>
              <option value="quarter">This Quarter</option>
              <option value="year">This Year</option>
            </select>
          </div>

          {/* Simple Bar Chart */}
          <div className="space-y-3">
            {chartData.slice(0, 6).map((item, index) => (
              <div key={index} className="flex items-center space-x-3">
                <div className="w-16 text-sm text-gray-600">{item.month}</div>
                <div className="flex-1 bg-gray-200 rounded-full h-4">
                  <div
                    className="bg-green-500 h-4 rounded-full"
                    style={{ width: `${(item.earnings / 50000) * 100}%` }}
                  ></div>
                </div>
                <div className="w-20 text-sm font-medium text-right">
                  {formatCurrency(item.earnings)}
                </div>
              </div>
            ))}
          </div>

          <div className="mt-4 pt-4 border-t">
            <div className="flex justify-between text-sm text-gray-600">
              <span>Total: {formatCurrency(chartData.reduce((sum, item) => sum + item.earnings, 0))}</span>
              <span>Avg: {formatCurrency(chartData.reduce((sum, item) => sum + item.earnings, 0) / chartData.length)}</span>
            </div>
          </div>
        </div>

        {/* Quick Actions */}
        <div className="bg-white rounded-lg shadow-sm p-6 border">
          <h2 className="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <div className="space-y-3">
            <button
              onClick={() => setShowPayoutModal(true)}
              disabled={availableBalance <= 0}
              className="w-full bg-green-600 text-white py-3 px-4 rounded-lg hover:bg-green-700 disabled:opacity-50 transition-colors text-left flex items-center justify-between"
            >
              <div className="flex items-center space-x-3">
                <span className="text-xl">üí∞</span>
                <div>
                  <div className="font-medium">Request Payout</div>
                  <div className="text-sm text-green-100">Withdraw your earnings</div>
                </div>
              </div>
              <span>‚Üí</span>
            </button>

            <button className="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors text-left flex items-center justify-between">
              <div className="flex items-center space-x-3">
                <span className="text-xl">üìä</span>
                <div>
                  <div className="font-medium">Generate Report</div>
                  <div className="text-sm text-blue-100">Download financial statement</div>
                </div>
              </div>
              <span>‚Üí</span>
            </button>

            <button className="w-full bg-purple-600 text-white py-3 px-4 rounded-lg hover:bg-purple-700 transition-colors text-left flex items-center justify-between">
              <div className="flex items-center space-x-3">
                <span className="text-xl">üéØ</span>
                <div>
                  <div className="font-medium">Set Financial Goals</div>
                  <div className="text-sm text-purple-100">Track your targets</div>
                </div>
              </div>
              <span>‚Üí</span>
            </button>

            <button className="w-full bg-orange-600 text-white py-3 px-4 rounded-lg hover:bg-orange-700 transition-colors text-left flex items-center justify-between">
              <div className="flex items-center space-x-3">
                <span className="text-xl">üí≥</span>
                <div>
                  <div className="font-medium">Payment Methods</div>
                  <div className="text-sm text-orange-100">Manage bank accounts</div>
                </div>
              </div>
              <span>‚Üí</span>
            </button>
          </div>
        </div>
      </div>

      {/* Recent Transactions */}
      <div className="bg-white rounded-lg shadow-sm p-6 border">
        <div className="flex justify-between items-center mb-6">
          <h2 className="text-lg font-semibold text-gray-900">Recent Transactions</h2>
          <button className="text-green-600 hover:text-green-700 text-sm font-medium">
            View All Transactions ‚Üí
          </button>
        </div>

        {error ? (
          <div className="text-center py-8">
            <div className="text-red-600 font-semibold mb-2">Error Loading Transactions</div>
            <button
              onClick={loadFinancialData}
              className="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition-colors"
            >
              Try Again
            </button>
          </div>
        ) : transactions.length === 0 ? (
          <div className="text-center py-8">
            <div className="text-4xl mb-2">üí∏</div>
            <p className="text-gray-500">No transactions yet</p>
            <p className="text-sm text-gray-400">Transactions will appear here after sales</p>
          </div>
        ) : (
          <div className="space-y-4">
            {transactions.slice(0, 10).map((transaction) => (
              <div key={transaction.id} className="flex items-center justify-between p-4 border rounded-lg hover:bg-gray-50 transition-colors">
                <div className="flex items-center space-x-4">
                  <div className="text-2xl">
                    {getTransactionIcon(transaction.type)}
                  </div>
                  <div>
                    <div className="font-medium text-gray-900">{transaction.description}</div>
                    <div className="text-sm text-gray-500">
                      {new Date(transaction.date).toLocaleDateString()} ‚Ä¢ {transaction.id}
                    </div>
                  </div>
                </div>
                <div className="text-right">
                  <div className={`font-semibold ${getTransactionTypeColor(transaction.type)}`}>
                    {transaction.type === 'credit' ? '+' : '-'}{formatCurrency(transaction.amount)}
                  </div>
                  <div className={`text-xs px-2 py-1 rounded-full ${
                    transaction.status === 'completed' 
                      ? 'bg-green-100 text-green-800'
                      : transaction.status === 'pending'
                      ? 'bg-yellow-100 text-yellow-800'
                      : 'bg-red-100 text-red-800'
                  }`}>
                    {transaction.status}
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>

      {/* Payout Request Modal */}
      {showPayoutModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-lg max-w-md w-full">
            <div className="p-6">
              <div className="flex justify-between items-center mb-4">
                <h2 className="text-xl font-semibold">Request Payout</h2>
                <button
                  onClick={() => setShowPayoutModal(false)}
                  className="text-gray-500 hover:text-gray-700"
                >
                  ‚úï
                </button>
              </div>

              <form onSubmit={handlePayoutRequest} className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Available Balance
                  </label>
                  <div className="text-2xl font-bold text-green-600">
                    {formatCurrency(availableBalance)}
                  </div>
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Payout Amount (‚Çπ)
                  </label>
                  <input
                    type="number"
                    value={payoutAmount}
                    onChange={(e) => setPayoutAmount(e.target.value)}
                    min="0"
                    max={availableBalance}
                    step="0.01"
                    required
                    className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    placeholder="Enter amount to withdraw"
                  />
                  <p className="text-xs text-gray-500 mt-1">
                    Maximum: {formatCurrency(availableBalance)}
                  </p>
                </div>

                <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                  <div className="flex items-center space-x-2 text-yellow-800">
                    <span>‚ö†Ô∏è</span>
                    <span className="text-sm">
                      Payouts are processed within 3-5 business days
                    </span>
                  </div>
                </div>

                <div className="flex gap-3 pt-4">
                  <button
                    type="submit"
                    disabled={actionLoading || !payoutAmount || parseFloat(payoutAmount) <= 0}
                    className="flex-1 bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 disabled:opacity-50 transition-colors"
                  >
                    {actionLoading === 'payout' ? (
                      <div className="flex items-center justify-center space-x-2">
                        <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
                        <span>Processing...</span>
                      </div>
                    ) : (
                      'Request Payout'
                    )}
                  </button>
                  
                  <button
                    type="button"
                    onClick={() => setShowPayoutModal(false)}
                    className="flex-1 bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 transition-colors"
                  >
                    Cancel
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default FinancialTab;